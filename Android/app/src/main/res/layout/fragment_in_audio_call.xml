<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_audio_call_page"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_marginTop="109dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/fl_avatar"
        android:layout_width="136dp"
        android:background="@drawable/bg_avatar"
        android:layout_height="136dp">
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_gravity="center"
            android:layout_width="126dp"
            android:layout_height="126dp"
            tools:background="@android:color/holo_green_dark"
            />
    </FrameLayout>


    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:singleLine="true"
        tools:text="nickname"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_avatar" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="12dp"
        android:text="@string/in_the_chat"
        android:textColor="@color/color_8cffffff"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nick" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="24dp"
        tools:text="00:00"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <com.netease.yunxin.app.one2one.ui.view.InTheAudioCallBottomBar
        android:id="@+id/bottom_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="98dp"
        android:layout_marginRight="75dp"
        android:layout_marginLeft="75dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.netease.yunxin.app.one2one.ui.view.InTheAudioCallBottomBar>

    <ImageView
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_gift"
        android:id="@+id/iv_ear"
        android:layout_marginBottom="16dp"
        android:background="@drawable/icon_earphone"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:id="@+id/iv_gift"
        android:visibility="gone"
        android:layout_marginBottom="228dp"
        android:background="@drawable/icon_gift"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <com.netease.yunxin.app.one2one.ui.view.SecurityTipsView
        android:id="@+id/security_tips"
        tools:visibility="visible"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="@string/audio_call_security_tips"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>